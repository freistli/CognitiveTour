<Page
    x:Class="CongnitiveTestApp.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CongnitiveTestApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid x:ConnectionId='1' x:Name="BackPanel">
            <Image x:ConnectionId='2' x:Name="FacePhoto" Stretch="Uniform" Margin="0,0,0,178"/>
            <Button x:ConnectionId='3' x:Name="BrowseButton" Margin="20,0,0,25" Height="67"         
                VerticalAlignment="Bottom" Content="Browse..."                
                                           RenderTransformOrigin="0.5,0.5" Width="308">
                
            </Button>
            <TextBox x:ConnectionId='4' x:Name="Status" HorizontalAlignment="Left" Height="60" Margin="422,630,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="560"/>
        </Grid>

    </Grid>
</Page>

